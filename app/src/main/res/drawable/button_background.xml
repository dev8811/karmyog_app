<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Light gray when pressed -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#FFFFFF" /> <!-- White by default -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Light gray border -->
            <shadow android:color="#888888" android:radius="4dp" />
        </shape>
    </item>
</selector>
