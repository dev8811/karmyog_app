<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Header section -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D3191"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_openmrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Karmyog foundtion"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"


            android:textStyle="bold" />

    </LinearLayout>

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAlignment="center"
        android:text="Welcome"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <!-- Action buttons -->
        <GridLayout
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="13dp"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:drawableTop="@drawable/ic_register"
                android:gravity="center"
                android:padding="16dp"
                android:text="Register"
                android:textColor="@color/black"
                android:theme="@style/Button.White" />

            <Button
                android:id="@+id/btn_form_entry"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:drawableTop="@drawable/waiting"
                android:gravity="center"
                android:padding="16dp"
                android:text="Waiting List"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_manage_providers"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:drawableTop="@drawable/ic_register"
                android:gravity="center"
                android:padding="16dp"
                android:text="Manage Providers"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_active_visits"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:drawableTop="@drawable/ic_register"
                android:gravity="center"
                android:padding="16dp"
                android:text="Active Visits"
                android:textColor="@color/black" />
        </GridLayout>

    </FrameLayout>


</LinearLayout>
