<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registration details"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <!-- Name CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Name"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="#2D3191"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Person image" />

        <!-- Age CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Age"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Address CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Current Address"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Aadhar Card Number CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAdharCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextAdharCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Aadhar Card Number"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/Adharcardfront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="#2D3191"
                android:text="Adhar Card Front" />

            <Button
                android:id="@+id/Adharcardback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:backgroundTint="#2D3191"
                android:text="Adhar Card Back" />
        </LinearLayout>

        <!-- Mobile Number CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Mobile Number"
                android:padding="10dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Additional Sickness CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewsick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextsick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Have Any sickness"
                android:inputType="text"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Child Information CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewchildinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextchildinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Children informations"
                android:inputType="text"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewchildmobilenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextchildmobilenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Children mobile number"
                android:inputType="text"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Medicine CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Every needed medicine"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Witness Details"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewWitnessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/edittextWitnessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Name"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewWitnessAdharCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextWitnessAdharCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Aadhar Card Number"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/Witnessadharcardfront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="#2D3191"
                android:text="Adhar Card Front" />

            <Button
                android:id="@+id/Witnessadharcardback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:backgroundTint="#2D3191"
                android:text="Adhar Card Back" />
        </LinearLayout>

        <!-- Witness Mobile Number CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewWitnessMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextWitnessMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Mobile Number"
                android:padding="10dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewWitnessAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <EditText
                android:id="@+id/editTextWitnessAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Current Address"
                android:padding="8dp"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#2D3191"
            android:padding="8dp"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>
